<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs', {Style: "CSS/Style.css" ,myStyle: "CSS/index.css" , title: "Inicio" }) %>

    <body>
        <!-- Contenedo Principal del Body  -->
        <div class="main-body-container">
            <%- include('./partials/header.ejs') %>
                <!-- MAIN -->
                <main>
                    <div class="banner-oferta">
                        <img src="/img/banners/coccion-cybermonday.jpg" alt="banner coccion cybermonday">
                    </div>

                    <h3 class="titulares">Mira nuestros nuevos productos!!</h3>

                    <section class="section-product">
                        <% listaProductos.forEach(productos=> { %>
                            <% if (productos.oferta=='false' ){%>
                                <a href="/ProductoDetalle/<%= productos.id%>">
                                    <article class="articles">
                                        <div>
                                            <img src="/img/product/<%= productos.img%>" alt="">
                                        </div>
                                        <div class="items_description">
                                            <i class="fa-solid fa-truck-fast bg-icon"></i>
                                            <div class="container-price">
                                                <p class="precio">$<%= productos.precio%>
                                                </p>
                                                <p class="descuento">
                                                    <%= productos.descuento%>% OFF
                                                </p>
                                            </div>
                                            <div class="pay">
                                                <img class="cuota" src="/img/banners/cuotas-sin-interes.png"
                                                    alt="logo-intereses">
                                                <img class="credit-card" src="/img/banners/visa-santander.png"
                                                    alt="Card Visa">
                                            </div>
                                            <div class="prod-descripcion">
                                                <b>Ver <%= productos.nombre%></b>
                                            </div>
                                        </div>
                                    </article>
                                </a>

                                <% } %>
                                    <% }) %>
                    </section>

                    <!-- SECCION DE OFERTAS -->
                    <div class="banner-oferta">
                        <img src="/img/banners/heladeras-cybermonday.jpg" alt="banner coccion cybermonday">
                    </div>

                    <h3 class="titulares">Un CyberMonday de Ofertas !!!</h3>

                    <section class="section-product">
                        <% listaProductos.forEach(productos=> { %>
                            <% if (productos.oferta=='true' ){%>
                                <a href="/ProductoDetalle/<%= productos.id%>">
                                    <article class="articles">
                                        <div>
                                            <img src="/img/product/<%= productos.img%>" alt="">
                                        </div>
                                        <div class="items_description">
                                            <i class="fa-solid fa-truck-fast bg-icon"></i>
                                            <div class="container-price">
                                                <p class="precio">$<%= productos.precio%>
                                                </p>
                                                <p class="descuento">
                                                    <%= productos.descuento%>% OFF
                                                </p>
                                            </div>
                                            <div class="pay">
                                                <img class="cuota" src="/img/banners/cuotas-sin-interes.png"
                                                    alt="logo-intereses">
                                                <img class="credit-card" src="/img/banners/visa-santander.png"
                                                    alt="Card Visa">
                                            </div>
                                            <div class="prod-descripcion">
                                                <b>Ver <%= productos.nombre%></b>
                                            </div>
                                        </div>
                                    </article>
                                </a>
                                <% } %>
                                    <% }) %>
                    </section>

                </main>

                <%- include('./partials/footer.ejs') %>
        </div>
    </body>

</html>